    margin-top: 23rpx;
}

.bottom_item_2 {
    float: inline-end;
    /* display: block; */
    width: 64rpx;
    height: 64rpx;
    /* background-color: rgb(41, 24, 102); */
    margin: auto 20rpx auto 20rpx;
