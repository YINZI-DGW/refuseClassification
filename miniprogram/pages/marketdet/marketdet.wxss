/* pages/marketdet/marketdet.wxss */
.container{
    width: 100vw;
}
.image{
    width: 100%;
    height: 600rpx;
    /* background-color: rgb(80, 33, 33); */
}
.middle{
   width: 100%;
   height: 180rpx;
   /* background-color: rgb(117, 42, 42); */
   display: flex;
   flex-direction: row;
   background-image: url('https://bpic.588ku.com//back_pic/06/03/49/5460b8fe904a062.jpg!/fw/750/quality/99/unsharp/true/compress/true');
}
.middle-left{
    flex: 2;
    /* background-color: rgb(27, 27, 27); */
}
.middle-right{
    display: flex;
    flex-direction: column;
    flex: 1;
    color: white;
}
.title{
    font-size: 24px;
    font-weight: 600;
    margin: 10rpx 0 0 30rpx;
    color: white;
}
.title1{
    display: flex;
    color: white;
}
.title1 text{
    display: block;
    font-size: 32rpx;
    margin: 10rpx 40rpx 0 30rpx;
    color: white;
}
.title3{
    width: 180rpx;
    height: 70rpx;
    border-radius: 60rpx;
    color: blue;
    line-height: 70rpx;
    /* margin-left: 80rpx; */
    font-size: 28rpx;
    /* padding-left: 44rpx; */
    text-align: center;
    background-color: rgb(255, 255, 255);
}
.bottom{
    border-radius: 20rpx 20rpx 0 0;
    width: 92%;
    /* background-color: rgb(41, 23, 23); */
}
.bottom-top text{
    display: inline-block;
    font-size: 26rpx;
    color: red;
    border: 1rpx solid rgb(255, 81, 81);
    text-align: center;
}
.bottom-middle{
    width: 96%;
    height: 120rpx;
    background-image: url('https://bpic.588ku.com//back_origin_min_pic/21/07/15/09059079ac97c18b3a9f520c521e071b.jpg!/fw/750/quality/99/unsharp/true/compress/true');
    margin: 10rpx auto;
    display: flex;
}
.bottom-middle-left{
    flex: 1;
    line-height: 120rpx;
    font-size: 30rpx;
    font-weight: 600;
    color: rgb(72, 73, 20);
}
.bottom-middle-middle{
    flex: 3;
    display: flex;
    flex-direction: column;
    line-height: 60rpx;
    color: rgb(72, 73, 20);
}.bottom-middle-right{
    flex: 1;
    line-height: 120rpx;
    color: rgb(72, 73, 20);
}

