/* pages/adress/adress.wxss */
.container{
    background-color: #fff;
    width: 100%;
    height: 100%;
}
.adress-item{
    display: flex;
    flex-direction: column;
    width: 86%;
    margin: 30rpx 30rpx;
}
.top{
    width: 100%;
    font-size: 28rpx;
    font-weight: 300;
    display: flex;
}
.biaoqian{
    width: 90rpx;
    height: 100%;
    border-radius: 20rpx;
    background-color: rgb(143, 129, 221);
    text-align: center;
    margin-right: 20rpx;
}
.middle{
    width: 100%;
    font-size: 33rpx;
    font-weight: bold;
}
.middle image{
     width: 36rpx;
     height: 36rpx;
     float: right;
}
.bottom{
    font-size: 28rpx;
    font-weight: 300;
}
.right{
    margin-left: 40rpx;
}
.fengexian{
    height: 2rpx;
    width: 90%;
    border-top: 2rpx solid rgb(155, 155, 155);
}
.button{
    position: absolute;
    bottom:60rpx;
    width: 500rpx;
    border-radius: 50rpx;
    background-color: rgb(250, 34, 34);
}