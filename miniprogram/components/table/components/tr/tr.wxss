.table-line {
  border-bottom: 2rpx solid #DDDDDD
}

.table-line .tr {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  min-height: 120rpx
}

.table-line .tr .td {
  padding: 35rpx 10rpx;
  text-align: center;
  white-space: normal;
  word-break: break-all;
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-flow: wrap;
  flex-flow: wrap;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center
}

.table-line .tr .td.select {
  width: 60rpx;
  padding: 0 1rpx
}

.table-line .expand {
  height: 0;
  font-size: 24rpx;
  color: #A2A2A2;
  line-height: 54rpx;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  opacity: 0
}

.table-line .expand .expand-box {
  padding: 0 50rpx 35rpx
}


.table-line .tr .td.img {
  padding: 0px;
}

.table-line .tr .td image{
  width: 100%;
}